<div style="margin: 0 0 1.5em 0; padding: 1.5em; border: 1px solid black;">
<div style="margin: 0 0 1.5em 0; padding: 1.5em;">
  <h3 style="margin: 0 0 0.8em 0;">From:</h3>
  <strong>{{ shop.name }}</strong><br/>
  {{ shop.owner }}<br/>
  {{ shop.address }}<br/>
  {{ shop.city }} {{ shop.province_code }} {{ shop.zip | upcase }}<br/>
  {{ shop.country }}
</div>

{% if shipping_address %}
<div style="font-size: 18px; padding: 1.5em;">
  <h2 style="margin: 0 0 0.4em 0;">To:</h2>
  <strong>{{ shipping_address.name }}</strong><br/>
  {% if shipping_address.company %}
    {{ shipping_address.company }}<br/>
  {% endif %}
  {{ shipping_address.street }}<br/>
  {{ shipping_address.city }} {{ shipping_address.province_code }} {{ shipping_address.zip | upcase }}<br/>
  {{ shipping_address.country }}
</div>
{% endif %}
</div>
